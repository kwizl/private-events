<h1>Login</h1>
<%= form_tag user_sessions_path, method: :post do %>
  <div class="field">
    <%= label_tag :name %>
    <%= text_field_tag :name %>
    <br>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <br>
  </div>
  <div class="actions">
    <%= submit_tag "Login" %>
  </div>
<% end %>

